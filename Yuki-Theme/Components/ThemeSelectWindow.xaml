<components:SnapWindow x:Class="YukiTheme.Components.ThemeSelectWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:components="clr-namespace:YukiTheme.Components"
                       mc:Ignorable="d" Background="#66000000" BorderThickness="0" WindowStyle="None" ResizeMode="NoResize"
                       AllowsTransparency="True"
                       Title="StickerWindow" Height="300" Width="600">

    <Grid>
        <Grid Width="200" Height="200" Background="#333333">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBox Name="Search" TextChanged="OnSearchTextChanged" KeyDown="Search_OnKeyDown">Search</TextBox>
            <ListView Grid.Row="1" Name="ThemeList" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="False" Background="#232323" MouseDown="ThemeList_OnMouseDown" />
        </Grid>
    </Grid>

</components:SnapWindow>