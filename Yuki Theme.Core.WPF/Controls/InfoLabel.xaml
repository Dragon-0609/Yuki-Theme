<UserControl x:Class="Yuki_Theme.Core.WPF.Controls.InfoLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Yuki_Theme.Core.WPF.Controls"
             mc:Ignorable="d" Padding="0"
             d:DesignHeight="30" d:DesignWidth="70">

    <UserControl.Resources>


        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Yuki Theme.Core.WPF;component/Styles/TextBlockStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <Image Width="16" VerticalAlignment="Center" Height="16"
               Source="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Image}"
               Margin="0 0 6 0" />
        <TextBlock Style="{StaticResource TextBlockUserControl}"
                   Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Text}" />
    </StackPanel>
</UserControl>