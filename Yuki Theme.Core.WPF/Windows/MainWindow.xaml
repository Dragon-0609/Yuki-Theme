<Window x:Class="Yuki_Theme.Core.WPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MinWidth="400"
        MinHeight="300"
        Loaded="Init"
        Background="#212121" Foreground="#DDDDDD"
        xmlns:controls="clr-namespace:Yuki_Theme.Core.WPF.Controls"
        Name="Window"
        Closing="MainWindow_OnClosing"
        SourceInitialized="MainWindow_OnSourceInitialized"
        SizeChanged="MainWindow_OnSizeChanged"
        Title="Yuki Theme" Height="400" Width="680">

    <Window.Tag>
        <controls:StyleConfig BorderColor="#97A0A5" SelectionColor="#4F4F4F" KeywordColor="#4F4F4F" BorderBrush="#97A0A5"
                              SelectionBrush="#4F4F4F" KeywordBrush="#4F4F4F" BackgroundClickColor="#4F4F4F" BackgroundClickBrush="#4F4F4F"
                              BackgroundDefaultColor="#323232" BackgroundDefaultBrush="#323232" />
    </Window.Tag>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/Yuki_Theme.Core.WPF;component/Styles/DropDownStyles.xaml" />
                <ResourceDictionary
                    Source="/Yuki_Theme.Core.WPF;component/Styles/ListViewStyles.xaml" />
                <ResourceDictionary
                    Source="/Yuki_Theme.Core.WPF;component/Styles/CheckboxStyles.xaml" />
                <ResourceDictionary
                    Source="/Yuki_Theme.Core.WPF;component/Styles/SliderStyles.xaml" />
                <ResourceDictionary
                    Source="/Yuki_Theme.Core.WPF;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary
                    Source="/Yuki_Theme.Core.WPF;component/Styles/TextBoxStyles.xaml" />
                <ResourceDictionary
                    Source="/Yuki_Theme.Core.WPF;component/Styles/ToolTipStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150" MaxWidth="250" Width="200" />
            <ColumnDefinition Width="2" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <ListView Padding="5" Name="Definitions" SelectionMode="Single" BorderThickness="0" Style="{StaticResource ListViewWindow}"
                  SelectionChanged="Definitions_SelectionChanged">
        </ListView>


        <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch" Name="DefSplitter"
                      Background="{Binding ElementName=Window, Path=Tag.BorderBrush}" />

        <Grid Grid.Column="2" Name="EditorSide">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <WrapPanel Name="TopPanel" HorizontalAlignment="Center">
                <WrapPanel.Resources>

                    <Style x:Key="SmallMargin" TargetType="FrameworkElement">
                        <Setter Property="Margin" Value="2 10 2 5" />
                    </Style>

                    <Style x:Key="BigMargin" TargetType="FrameworkElement">
                        <Setter Property="Margin" Value="15 10 5 5" />
                    </Style>

                    <Style x:Key="ToolTipBlocks" TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Margin" Value="0,0,0,5" />
                    </Style>

                </WrapPanel.Resources>

                <ComboBox Width="180" Margin="5 10 5 5" SelectionChanged="Theme_Changed" Name="Themes" VerticalAlignment="Top"
                          Style="{StaticResource DropdownWindow}">
                </ComboBox>

                <WrapPanel Name="EditorButtons1">

                    <Button Name="AddButton" Style="{StaticResource MarginButton}" VerticalAlignment="Top" BorderThickness="0"
                            Click="AddButton_OnClick" ToolTipService.ShowDuration="5000" ToolTipService.InitialShowDelay="750">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ToolTipBlocks}">Add Theme</TextBlock>
                                <TextBlock>
                                    Add theme by copying from another
                                    <LineBreak />
                                    theme.
                                </TextBlock>
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>

                    <Button Name="ManageButton" VerticalAlignment="Top" BorderThickness="0" Style="{StaticResource Button24}"
                            Click="ManageButton_OnClick" ToolTipService.ShowDuration="5000" ToolTipService.InitialShowDelay="750">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ToolTipBlocks}">Manage Themes</TextBlock>
                                <TextBlock>
                                    Open Theme Manager to manage themes.
                                    <LineBreak />
                                    To Add, Remove, Rename themes.
                                </TextBlock>
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>

                    <Button Name="SaveButton" VerticalAlignment="Top" BorderThickness="0" Style="{StaticResource Button24}"
                            Click="SaveButton_OnClick"
                            ToolTipService.ShowDuration="5000" ToolTipService.InitialShowDelay="750">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ToolTipBlocks}">Save the Theme</TextBlock>
                                <TextBlock>
                                    Save current theme.
                                </TextBlock>
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>

                    <Button Name="RestoreButton" VerticalAlignment="Top" BorderThickness="0" Style="{StaticResource Button24}"
                            ToolTipService.ShowDuration="5000" ToolTipService.InitialShowDelay="750"
                            Click="RestoreButton_OnClick">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ToolTipBlocks}">Restore the Theme</TextBlock>
                                <TextBlock>
                                    Restore the Theme to default
                                    <LineBreak />
                                    case. You can use it if you
                                    <LineBreak />
                                    changed wrong field.
                                </TextBlock>
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>

                </WrapPanel>

                <Button Name="ExportButton" VerticalAlignment="Top" BorderThickness="0" Style="{StaticResource Button24}"
                        ToolTipService.ShowDuration="5000" ToolTipService.InitialShowDelay="750">
                    <Button.ToolTip>
                        <StackPanel>
                            <TextBlock Style="{StaticResource ToolTipBlocks}">Export the Theme</TextBlock>
                            <TextBlock>
                                Export the Theme to PascalABC.NET.
                            </TextBlock>
                        </StackPanel>
                    </Button.ToolTip>
                </Button>

                <WrapPanel Name="EditorButtons2">
                    <Button Name="ImportButton" VerticalAlignment="Top" BorderThickness="0" Style="{StaticResource Button24}"
                            ToolTipService.ShowDuration="5000" ToolTipService.InitialShowDelay="750">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ToolTipBlocks}">Import Theme</TextBlock>
                                <TextBlock>
                                    Import theme from file.
                                    <LineBreak />
                                    Acceptable extensions:
                                    <LineBreak />
                                    .yukitheme, .json, .xshd
                                </TextBlock>
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>

                    <Button Name="ImportDirectoryButton" VerticalAlignment="Top" BorderThickness="0" Style="{StaticResource Button24}"
                            ToolTipService.ShowDuration="5000" ToolTipService.InitialShowDelay="750">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Style="{StaticResource ToolTipBlocks}">Import Theme Directory</TextBlock>
                                <TextBlock>
                                    Same as Import Theme, but
                                    <LineBreak />
                                    import from the directory.
                                </TextBlock>
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>
                </WrapPanel>
                <Button Name="SettingsButton" VerticalAlignment="Top" BorderThickness="0" Style="{StaticResource Button24}"
                        ToolTipService.ShowDuration="5000" ToolTipService.InitialShowDelay="750" Click="SettingsButton_OnClick">
                    <Button.ToolTip>
                        <StackPanel>
                            <TextBlock Style="{StaticResource ToolTipBlocks}">Settings</TextBlock>
                            <TextBlock>
                                Change Settings.
                            </TextBlock>
                        </StackPanel>
                    </Button.ToolTip>
                </Button>

                <WrapPanel Name="EditorPanels">
                    <Grid Name="ColorPanel" Margin="15 5" Visibility="Collapsed">
                        <Grid.Resources>
                            <Style x:Key="ColorButton" TargetType="Button" BasedOn="{StaticResource ButtonSource}">
                                <Setter Property="Width" Value="32" />
                                <Setter Property="Height" Value="16" />
                                <Setter Property="Margin" Value="0" />
                            </Style>

                            <SolidColorBrush x:Key="BackBrush" Color="Blue" />
                            <SolidColorBrush x:Key="ForeBrush" Color="Red" />

                            <Style x:Key="BackButton" TargetType="Button" BasedOn="{StaticResource ColorButton}">
                                <Setter Property="Background" Value="{DynamicResource BackBrush}" />
                            </Style>

                            <Style x:Key="ForeButton" TargetType="Button" BasedOn="{StaticResource ColorButton}">
                                <Setter Property="Background" Value="{DynamicResource ForeBrush}" />
                            </Style>
                        </Grid.Resources>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Name="BGColorPanel" Orientation="Horizontal">
                            <TextBlock Text="Background Color:" VerticalAlignment="Center" Margin="5 2 8 2" />
                            <Border BorderBrush="Gray" BorderThickness="1" Style="{StaticResource SmallMargin}">
                                <Button Name="BGButton" Margin="0" Style="{StaticResource BackButton}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="0" Name="FGColorPanel" Orientation="Horizontal">
                            <TextBlock Text="Foreground Color:" VerticalAlignment="Center" Margin="5 2 8 2" />
                            <Border BorderBrush="Gray" BorderThickness="1" Style="{StaticResource SmallMargin}">
                                <Button Width="32" Height="16" Name="FGButton" Margin="0" Style="{StaticResource ForeButton}" />
                            </Border>
                        </StackPanel>

                        <CheckBox VerticalAlignment="Center" Margin="10 2" Name="BoldCheckBox" Grid.Row="0" Grid.Column="1" Content="Bold"
                                  Style="{StaticResource CheckBoxWindow}" />

                        <CheckBox VerticalAlignment="Center" Margin="10 2" Name="ItalicCheckBox" Grid.Row="1" Grid.Column="1"
                                  Content="Italic"
                                  Style="{StaticResource CheckBoxWindow}" />

                    </Grid>

                    <WrapPanel Name="ImagePanel" Orientation="Horizontal" Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Width="120" Name="ImagePath" Margin="5 5 0 0" FontSize="12" Text="" VerticalAlignment="Center"
                                         BorderBrush="DimGray" Padding="2 1" Style="{StaticResource TextBoxWindow}" />
                                <Button Name="ImagePathButton" Margin="-1 5 5 0" Width="20" Height="20" Click="ImagePathButton_OnClick" />
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                                <Button Name="ApplyButton" Content="Apply" Width="NaN" Padding="6 2" />
                                <Button Name="CancelButton" Content="Cancel" Width="NaN" Padding="6 2" />
                            </StackPanel>
                        </Grid>

                        <StackPanel Name="AlignPanel">
                            <TextBlock Text="Algin:" Margin="7 0" Style="{StaticResource BigMargin}" />
                            <StackPanel Orientation="Horizontal">
                                <controls:AlignButton Style="{StaticResource BigButton}" Margin="10 10 5 5" x:Name="LAlignButton"
                                                      Padding="0"
                                                      IsSelected="False" Click="LAlignButton_OnClick" />
                                <controls:AlignButton Style="{StaticResource BigButton}" x:Name="CAlignButton" Padding="0"
                                                      IsSelected="False"
                                                      Click="CAlignButton_OnClick" />
                                <controls:AlignButton Style="{StaticResource BigButton}" x:Name="RAlignButton" Padding="0"
                                                      IsSelected="False"
                                                      Click="RAlignButton_OnClick" />
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Name="OpacityPanel">
                            <TextBlock Text="Opacity:" Margin="7 0" />

                            <Slider Width="120" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="1"
                                    Margin="5 5 5 0" Background="{Binding ElementName=Window, Path=Background}"
                                    Foreground="{Binding ElementName=Window, Path=Foreground}"
                                    Name="OpacitySlider" Tag="{Binding ElementName=Window, Path=Tag}" />
                        </StackPanel>

                    </WrapPanel>
                </WrapPanel>

            </WrapPanel>
            <Grid Grid.Row="1">

                <controls:AirspacePopup PlacementTarget="{Binding ElementName=Fstb}"
                                        FollowPlacementTarget="True"
                                        AllowOutsideScreenPlacement="True"
                                        StaysOpen="True"
                                        ParentWindow="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                        IsOpen="True"
                                        AllowsTransparency="True"
                                        Placement="Bottom, Right"
                                        x:Name="Popup" Width="200" Height="200">
                    <Grid>
                        <Image VerticalAlignment="Bottom" HorizontalAlignment="Right" Name="Sticker" Width="200" Height="200"
                               Visibility="Hidden" />
                    </Grid>
                </controls:AirspacePopup>

                <controls:CodeTextboxHost x:Name="Fstb"></controls:CodeTextboxHost>

            </Grid>
        </Grid>
    </Grid>
</Window>